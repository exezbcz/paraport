{
  "name": "paraport-sdk-monorepo",
  "scripts": {
    "build": "pnpm --filter @paraport/core build",
    "dev": "pnpm run -r --parallel dev",
    "lint": "pnpm -r --if-present run lint:fix && pnpm -r --if-present run lint",
    "changeset:version": "pnpm changeset version && pnpm run lint",
    "publish:static": "cd packages/static && npm publish",
    "typecheck": "pnpm -r typecheck",
    "check": "pnpm -r lint && pnpm typecheck",
    "prepare": "husky",
    "ci:bootstrap": "pnpm --filter @paraport/static build && pnpm --filter @paraport/core build && pnpm --filter @paraport/vue build"
  },
  "packageManager": "pnpm@9.1.3+sha1.6110a47202a78d07d0bf8c9f4f4c63cc83bb833a",
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10"
  },
  "pnpm": {
    "overrides": {
      "@types/node": "^20.0.0"
    }
  },
  "lint-staged": {
    "packages/vue/**/*.{ts,vue}": [
      "pnpm --filter @paraport/vue exec eslint --max-warnings=0 --fix --"
    ],
    "packages/react/**/*.{ts,tsx,js}": [
      "pnpm --filter @paraport/react exec eslint --max-warnings=0 --fix --"
    ],
    "packages/core/**/*.ts": [
      "pnpm --filter @paraport/core exec biome check --write --no-errors-on-unmatched --"
    ],
    "packages/sdk/**/*.ts": [
      "pnpm --filter @paraport/sdk exec biome check --write --no-errors-on-unmatched --"
    ],
    "packages/static/**/*.ts": [
      "pnpm --filter @paraport/static exec biome check --write --no-errors-on-unmatched --"
    ]
  }
}
