{
	"name": "@paraport/static",
	"version": "0.0.2",
	"description": "Static configuration and constants for ParaPort SDK",
	"keywords": [
		"paraport",
		"polkadot",
		"sdk",
		"blockchain"
	],
	"author": "Paraport",
	"license": "MIT",
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"prebuild": "pnpm run generate",
		"build": "vite build",
		"dev": "vite build --watch --mode development",
		"lint": "biome check --write .",
		"typecheck": "tsc -p tsconfig.json --noEmit",
		"generate": "node scripts/generate-providers.mjs && pnpm exec biome format --write src/providers.ts"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@polkadot/apps-config": "^0.164.1",
		"@types/node": "^20.0.0",
		"typescript": "^5.7.3",
		"vite": "^6.0.7",
		"vite-plugin-dts": "^4.5.0"
	}
}
