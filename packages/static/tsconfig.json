{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"types": ["node"],
		"declaration": true,
		"isolatedModules": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
