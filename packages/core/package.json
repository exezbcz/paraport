{
	"name": "@paraport/core",
	"version": "0.1.0-alpha.1",
	"description": "Core functionality for ParaPort SDK",
	"keywords": ["paraport", "polkadot", "sdk", "blockchain"],
	"license": "MIT",
	"author": "KodaDot",
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": ["dist", "README.md", "LICENSE"],
