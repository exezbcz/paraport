		"typescript": "^5.7.3",
		"vite": "^6.0.7",
		"vite-plugin-dts": "^4.5.0",
		"vitest": "^3.1.1"
	},
	"dependencies": {
		"@kodadot1/sub-api": "0.4.0-rc.2",
		"@paraport/static": "workspace:*",
		"@paraspell/sdk-pjs": "^8.0.0",
		"@polkadot/api": "11.2.1",
		"@polkadot/extension-dapp": "^0.58.3",
		"@polkadot/types": "11.2.1",
		"@polkadot/util-crypto": "^13.3.1",
